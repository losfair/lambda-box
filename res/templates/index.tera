<!DOCTYPE html>
<html>
    <head>
        <title>λ-box 提问箱</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <meta charset="utf-8">
        <meta property="og:title" content="{{ metaTitle }}">
        <meta property="og:description" content="{{ metaDesc }}">
        <meta itemprop="name" content="{{ metaTitle }}">
        <meta itemprop="description" content="{{ metaDesc }}">
        <script>
            const lb_ownerGhid = {{ ownerGhid | safe }};
            const lb_ownerGhlogin = {{ ownerGhlogin | safe }};
        </script>
        <script src="/scripts/rt.js"></script>
        <link rel="stylesheet" href="/style.css">
    </head>
    <body>
        <div class="container">
            {% if pageError %}
            <p>{{ pageError }}</p>
            {% else %}
            <div class="new-question">
                {% if userMdHtml %}
                <div class="intro">
                    {{ userMdHtml | safe }}
                    <p class="intro-tail">
                        @<a href="https://github.com/{{ ownerGhloginUnwrapped }}">{{ ownerGhloginUnwrapped }}</a>
                    </p>
                </div>
                <p>{{ questionHint }}</p>
                {% else %}
                <p>Ask @<a href="https://github.com/{{ ownerGhloginUnwrapped }}">{{ ownerGhloginUnwrapped }}</a></p>
                {% endif %}
                {% if blockReason %}
                <p id="success-hint">{{ blockReason }}</p>
                {% else %}
                <textarea oninput="questionInputOnce(event)" id="question-area" class="question-area"></textarea>
                <button disabled id="send-btn" class="send-btn" onclick="submitQuestion()">发送</button>
                <p id="success-hint"></p>
                {% endif %}
            </div>
            <div class="question-list-container">
                <p>已回答的问题</p>
                <div id="question-list"></div>
                <p id="loading-box" onclick="updateQuestionList()">加载中</p>
            </div>
            {% endif %}
            <div class="footer">
                <p>λ-box v2.0.0</p>
                <p>
                    <a href="https://univalence.me">Univalence Labs</a>
                    {% if icpBeian %}
                    <span> | <a href="https://beian.miit.gov.cn/">{{ icpBeian }}</a></span>
                    {% endif %}
                </p>
            </div>
        </div>
    </body>
</html>